@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
   <header class="row">
       <div class="text-center">
            <h1 class="display-2">
                <span class="d-block">Hello,I´m TecnoSoftware</span>
            </h1>
            <p class="text-muted fw-light text-capitalize">
                Company dedicated to the technological solutions of the market. 
            </p>
            <div class="d-md-block icons-social-networks text-center">
               <a href="#" target="_blank" class="bg-facebook">
                   <img src=./img/facebook.svg alt="Facebook"/>
               </a>
               <a href="#" target="_blank" class="bg-tiwtter mx-2">
                   <img src="./img/twitter.svg" alt="Twitter"/>
               </a>
             </div>
       </div>
       <div class="col 8 col-md-4">
           &nbsp;
            <div class="photo-frame position-relative shadow"> 
                <img src=~/img/players.jpg alt="Benjamin" class="w-100"/>  
