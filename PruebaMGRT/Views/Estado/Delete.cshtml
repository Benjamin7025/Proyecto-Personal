@model PruebaMGRT.Models.Estado

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="text-center">Are you sure you want to delete this state?</h1>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Name State
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreEstado)
        </dd>
        <dt class = "col-sm-2">
            Creation date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-primary"><i class="fa-solid fa-chevron-left text-dark"></i> Back to List</a>
          &nbsp;
        <button type="submit" class="btn btn-danger"><i class="fa-regular fa-trash-can text-dark"></i> Delete</button>
    </form>
</div>
