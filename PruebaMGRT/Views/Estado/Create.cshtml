@model PruebaMGRT.Models.Estado

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Create New State</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">State Identifier</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Name Estate</label>
                <input asp-for="NombreEstado" class="form-control" />
                <span asp-validation-for="NombreEstado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Creation Date</label>
                <input asp-for="FechaCreacion" type= "date" class="form-control" />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>
             &nbsp;
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary"><i class="fa-solid fa-chevron-left text-dark"></i> Back to List</a>
                 &nbsp;
                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-circle-plus text-dark"></i> Create</button>          
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
