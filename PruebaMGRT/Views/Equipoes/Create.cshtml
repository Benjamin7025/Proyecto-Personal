@model PruebaMGRT.Models.Equipo

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Create new Team</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Name</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pais" class="control-label">Country</label>
                <input asp-for="Pais" class="form-control" />
                <span asp-validation-for="Pais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoId" class="control-label">State</label>
                <select asp-for="EstadoId" class ="form-select" asp-items="ViewBag.EstadoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="NombreJugador" class="control-label">Name Player</label>
                <input asp-for="NombreJugador" class="form-control" />
                <span asp-validation-for="NombreJugador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCreacion" class="control-label">Creation Date</label>
                <input asp-for="FechaCreacion" type="date" class="form-control" />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>
             &nbsp;
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary"><i class="fa-solid fa-chevron-left text-dark"></i> Back to List</a>
                &nbsp;
                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-circle-plus text-dark"></i> Create</button>          
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
