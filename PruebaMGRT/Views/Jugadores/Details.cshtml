@model PruebaMGRT.Models.Jugadore

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Player details</h1>
  <hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Last Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2">
            Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>
        <dt class = "col-sm-2">
            Passport
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pasaporte)
        </dd>
        <dt class = "col-sm-2">
            Direction
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class = "col-sm-2">
            Sex
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sexo)
        </dd>
        <dt class = "col-sm-2">
            State
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado.Id)
        </dd>
        <dt class = "col-sm-2">
           Equipment
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdEquipoNavigation.Id)
        </dd>
    </dl>
</div>
<div>
     <a asp-action="Index" class="btn btn-primary"><i class="fa-solid fa-chevron-left text-dark"></i> Back to List</a>
      &nbsp;
     <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.Id"><i class="fa-solid fa-pen-to-square text-dark"></i> Edit</a> 
</div>
