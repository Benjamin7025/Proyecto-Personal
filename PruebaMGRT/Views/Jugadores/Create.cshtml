@model PruebaMGRT.Models.Jugadore


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1 class="text-center">Create new players</h1>

<hr />
<div class="container">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Name</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label">Last Name</label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaNacimiento" class="control-label">Date</label>
                <input asp-for="FechaNacimiento" type= "date" class="form-control" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pasaporte" class="control-label">Passport</label>
                <input asp-for="Pasaporte" class="form-control" />
                <span asp-validation-for="Pasaporte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label">Direction</label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sexo" class="control-label">Sex</label>
                <input asp-for="Sexo" class="form-control" />
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEquipo" class="control-label">Equipment</label>
                <select asp-for="IdEquipo" class ="form-select" asp-items="ViewBag.IdEquipo"></select>
            </div>
            <div class="form-group">
                <label asp-for="EstadoId" class="control-label">State</label>
                <select asp-for="EstadoId" class="form-select"  asp-items="ViewBag.EstadoId"></select>
            </div>
             &nbsp;
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary"><i class="fa-solid fa-chevron-left text-dark"></i> Back to List</a>
                 &nbsp;
                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-circle-plus text-dark"></i> Create</button>           
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
