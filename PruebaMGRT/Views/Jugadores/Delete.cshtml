@model PruebaMGRT.Models.Jugadore

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="text-center">Are you sure you want to remove this player?</h1>
<hr />
<div>

    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Last Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2">
            Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>
        <dt class = "col-sm-2">
            Passport
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pasaporte)
        </dd>
        <dt class = "col-sm-2">
            Direction
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class = "col-sm-2">
            Sex
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sexo)
        </dd>
        <dt class = "col-sm-2">
            State
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado.Id)
        </dd>
        <dt class = "col-sm-2">
            Equipment
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdEquipoNavigation.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-primary"><i class="fa-solid fa-chevron-left text-dark"></i> Back to List</a>
         &nbsp;
        <button type="submit" class="btn btn-danger"><i class="fa-regular fa-trash-can text-dark"></i> Delete</button>
    </form>
</div>
